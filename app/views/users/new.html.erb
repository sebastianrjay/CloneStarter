<div class="log-in-background">
	<div class="log-in">
	<h1><b>Sign Up</b></h1>
  <form method="post" action="<%= users_url %>" role="form">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="user_name">
	    <input type="text" name="user[username]"
	      value="<%= @user.username if @user.username %>" id="user_name" placeholder="Name">
	  </label>
	  <label for="user_email">
	    <input type="text" name="user[email]"
	      value="<%= @user.email if @user.email %>" id="user_email" placeholder="Email">
	  </label>
	  <label for="user_password">
	    <input type="password" name="user[password]" value="<%= @user.password if @user.password %>"
        id="user_password" placeholder="Password">
	  </label>
    <br>
	  <b><input type="submit" value="Sign Up"></b>
	</form>
	</div>
</div>
